{
	"name": "notakto-website",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build",
		"start": "next start",
		"ci-setup": "pnpm install --frozen-lockfile",
		"test:coverage": "vitest run --coverage",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"coverage": "vitest run --coverage",
		"prepare": "lefthook install",
		"dev:local": "concurrently --kill-others --prefix \"[{name}]\" --names \"NEXT.JS,SOCKET\" \"pnpm dev\" \"cd notakto-socket-server && pnpm start\"",
		"install:all": "pnpm install && cd notakto-socket-server && pnpm install",
		"postinstall": "node -e \"const fs=require('fs'); if(!fs.existsSync('.env')) fs.copyFileSync('.env.example','.env');\"",
		"env:check": "node -e \"const fs=require('fs'); const example=Object.keys(require('dotenv').config({path:'.env.example'}).parsed||{}); const current=Object.keys(require('dotenv').config({path:'.env'}).parsed||{}); const missing=example.filter(k=>!current.includes(k)); if(missing.length) {console.warn('⚠️  Missing env vars:',missing.join(', ')); process.exit(1);}\"",
		"predev": "pnpm env:check"
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.1.18",
		"@vercel/analytics": "^1.6.1",
		"@vercel/speed-insights": "^1.3.1",
		"axios": "^1.13.2",
		"clsx": "^2.1.1",
		"firebase": "^12.7.0",
		"logrocket": "^11.0.0",
		"micro": "^10.0.1",
		"next": "^16.1.1",
		"postcss": "^8.5.6",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-toastify": "^11.0.5",
		"socket.io-client": "^4.8.3",
		"tailwindcss": "^4.1.18",
		"uuid": "^13.0.0",
		"zod": "^4.3.4",
		"zustand": "^5.0.9"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.1",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.10.4",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitest/ui": "^4.0.16",
		"concurrently": "^9.2.1",
		"dotenv": "^17.2.3",
		"jsdom": "^27.4.0",
		"lefthook": "^2.0.13",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"nextConfigOutput": "standalone",
	"packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
